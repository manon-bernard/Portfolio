---
import CtaButton from './CtaButton.astro';
---

<aside id="contact">
  <div class="contact-container">
    <div>
      <h2 class="tagline">Pour me contacter ?</h2>
      <p class="tagline">C'est par ici.</p>
    </div>

    <div class="button-container">
      <CtaButton
        name="Linkedin"
        path="https://www.linkedin.com/in/manon-bernard-mb/"
        style="secondary"
      />

      <CtaButton
        name="Message"
        path="mailto:manon.bernard8907@gmail.com"
        style="secondary"
      />
    </div>
  </div>
</aside>

<style>
  aside {
    background-color: var(--medium-70);
  }

  .tagline {
    color: var(--white);
    font-size: var(--text-xl);
    text-align: center;
    max-width: 25ch;
  }

  .contact-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    padding: 3rem 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .button-container {
    text-align: center;
    gap: 2rem;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  @media (min-width: 50em) {
    h2 {
      font-size: var(--text-3xl);
      text-align: left;
    }

    .contact-container {
      padding: 7.5rem;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .button-container {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .button-container {
      display: flex;
      flex-direction: column;
    }
  }
</style>
